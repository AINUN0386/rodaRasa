<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E27A53"
    android:padding="24dp">

    <!-- Logo at top -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_rodarasa"
        android:contentDescription="App Logo" />

    <!-- App Name/Slogan -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roda Rasa"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover and track"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delicious food trucks near you"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Buttons at bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <!-- Login Button -->
        <Button
            android:id="@+id/btnWelcomeLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Login"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_orange"
            android:textSize="16sp"/>

        <!-- Space between buttons -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/btnWelcomeSignUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:textColor="@color/primary_orange"
            android:backgroundTint="@color/white"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_baseline_person_add_24"
            android:drawableTint="@color/primary_orange"/>
    </LinearLayout>

</RelativeLayout>